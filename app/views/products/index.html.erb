<h1>Listing products</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= button_to 'Show', product, method: :get, :class => "btn btn-info btn-sm" %><i class=" icon icon-pencil"></i></td>
    <td><%= button_to 'Edit', edit_product_path(product), method: :get, :class => "btn btn-primary btn-sm icon icon-bullhorn" %></td>
    <td><%= button_to 'Destroy', product, method: :delete, :class => "btn btn-warning btn-sm" , data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'New Product', new_product_path, method: :get, :class => "btn btn-primary btn-sm" %>

<%= button_to 'Signout',  destroy_user_session_path, method: :delete, :class => "btn btn-danger btn-sm"%>